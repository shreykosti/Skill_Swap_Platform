generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  hashpassword  String
  name      String   @unique
  location        String?
  availability    String?   
  profileStatus Boolean @default(true)
  bio       String?
  skills    Skill[]
}

model Skill {
  id   Int    @id @default(autoincrement())
  email String 
  skillname String 
  skillType SkillType
  skillLevel String?
  skillDescription String?
  User User @relation(fields: [email], references: [email])
}

enum SkillType {
  OFFERED
  WANTED
}